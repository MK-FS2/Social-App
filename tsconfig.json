{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",        
    "target": "es2020",
    "types": ["node"],
    "lib": ["es2020"],

    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,

    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "dist/index.js"],
  "exclude": ["node_modules", "dist"]
}
